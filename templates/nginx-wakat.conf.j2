server {
    listen       80;
    listen       443 ssl;
    ssl_certificate      /etc/nginx/nginx-{{ wa_kat.hostname }}.crt;
    ssl_certificate_key  /etc/nginx/nginx-{{ wa_kat.hostname }}.key;
    server_name  kat.webarchiv.cz;

    location / {
        proxy_pass http://127.0.0.1:{{ wa_kat.port }};
        proxy_redirect     off;
    
        proxy_set_header   Host              $host;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
    }
}
